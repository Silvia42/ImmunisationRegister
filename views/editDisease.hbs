<form method="POST" action="/imre/Disease/{{diseaseId}}?_method=PUT">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{diseaseRecord.name}}"/>

    <label for="description">Description</label>
    <input type="text" name="description" value="{{diseaseRecord.description}}"/>

    <input type="submit" value="Update Disease"/>
</form>

<form method="POST" action="/imre/Disease/{{diseaseId}}?_method=DELETE">
    <input type="submit" value="Delete Disease"/>
</form>